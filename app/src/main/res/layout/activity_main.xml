<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:backgroundTint="@color/drink_pink"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintRight_toLeftOf="@id/button2"
        app:layout_constraintBottom_toTopOf="@id/button"
        android:onClick="numberButtonClicked"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:backgroundTint="@color/drink_pink"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintRight_toLeftOf="@id/button3"
        app:layout_constraintBottom_toTopOf="@id/buttonPunto"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:backgroundTint="@color/drink_pink"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintRight_toLeftOf="@id/buttonMas"
        app:layout_constraintBottom_toTopOf="@id/buttonPunto"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:backgroundTint="@color/drink_pink"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintRight_toLeftOf="@id/button5"
        app:layout_constraintBottom_toTopOf="@id/button1"
        android:onClick="numberButtonClicked"/>


    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:backgroundTint="@color/drink_pink"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintRight_toLeftOf="@id/button6"
        app:layout_constraintBottom_toTopOf="@id/button2"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="25sp"
        android:backgroundTint="@color/drink_pink"
        app:layout_constraintLeft_toRightOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintRight_toLeftOf="@id/buttonMenos"
        app:layout_constraintBottom_toTopOf="@id/button3"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="25sp"
        android:backgroundTint="@color/drink_pink"
        app:layout_constraintTop_toBottomOf="@id/buttonAC"
        app:layout_constraintRight_toLeftOf="@id/button8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button4"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:backgroundTint="@color/drink_pink"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/button7"
        app:layout_constraintRight_toLeftOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@+id/buttonDEL"
        app:layout_constraintBottom_toTopOf="@id/button5"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:backgroundTint="@color/drink_pink"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/buttonPorcent"
        app:layout_constraintRight_toLeftOf="@+id/buttonMulti"
        app:layout_constraintLeft_toRightOf="@id/button8"
        app:layout_constraintBottom_toTopOf="@id/button6"
        android:onClick="numberButtonClicked"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="25sp"
        android:backgroundTint="@color/drink_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonPunto"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/buttonMas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textSize="25sp"
        android:backgroundTint="@color/medium_turquoise"
        app:layout_constraintLeft_toRightOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/buttonMenos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonIgual"
        android:onClick="getOperator"/>

    <Button
        android:id="@+id/buttonMenos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="25sp"
        android:backgroundTint="@color/medium_turquoise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonMas"
        app:layout_constraintLeft_toRightOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/buttonMulti"
        android:onClick="getOperator"/>

    <Button
        android:id="@+id/buttonMulti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="*"
        android:backgroundTint="@color/medium_turquoise"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonMenos"
        app:layout_constraintLeft_toRightOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/buttonDivi"
        android:onClick="getOperator"/>

    <Button
        android:id="@+id/buttonDivi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="รท"
        android:textSize="25sp"
        android:backgroundTint="@color/medium_turquoise"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonPorcent"
        app:layout_constraintBottom_toTopOf="@+id/buttonMulti"
        android:onClick="getOperator"
        />

    <Button
        android:id="@+id/buttonPunto"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="."
        android:textSize="25sp"
        android:backgroundTint="@color/drink_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonIgual"
        app:layout_constraintLeft_toRightOf="@id/button"
        app:layout_constraintTop_toBottomOf="@id/button3"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/buttonIgual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:backgroundTint="@color/medium_turquoise"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonPunto"
        app:layout_constraintTop_toBottomOf="@id/buttonMas"/>

    <Button
        android:id="@+id/buttonPorcent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        android:textSize="30sp"
        android:backgroundTint="@color/blond"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/buttonDEL"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintBottom_toTopOf="@id/button9"
        app:layout_constraintRight_toLeftOf="@id/buttonDivi"
        />

    <Button
        android:id="@+id/buttonAC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="AC"
        android:textSize="25sp"
        android:backgroundTint="@color/blond"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintBottom_toTopOf="@id/button7"
        app:layout_constraintRight_toLeftOf="@+id/buttonDEL"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/buttonDEL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="DEL"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/blond"
        app:layout_constraintLeft_toRightOf="@id/buttonAC"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintBottom_toTopOf="@id/button8"
        app:layout_constraintRight_toLeftOf="@id/buttonPorcent"
        />



    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>